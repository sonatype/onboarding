<p2lineup>
  <groupId>${project.groupId}</groupId>
  <id>${project.artifactId}</id>
  <version>${project.version}.${buildQualifier}</version>
  <name>Nexus IDE Lineup</name>
  <description>Nexus Integrated Development Environment (IDE)</description>
  <repositories>
    <repository>
      <url>http://download.eclipse.org/releases/galileo</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <url>${nexus.baseURL}/content/repositories/mse-latest/</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <url>${nexus.baseURL}/content/repositories/mse-governor-latest/</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <url>${nexus.baseURL}/content/repositories/nx-mse/</url>
      <layout>p2</layout>
    </repository>
  </repositories>
  <rootInstallableUnits>
    <unit>
      <id>org.eclipse.sdk.ide</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>org.maven.ide.eclipse.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>org.maven.ide.eclipse.temporary.mojos.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>org.sonatype.tycho.m2e.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>com.sonatype.s2.project.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>com.sonatype.s2.project.svn.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
      <id>com.sonatype.s2.project.git.feature.feature.group</id>
      <version>0.0.0</version>
    </unit>
    <unit>
       <id>com.sonatype.buildserver.bridge.feature.feature.group</id>
       <version>0.0.0</version>
    </unit>    
  </rootInstallableUnits>
  <p2Advice>
    <touchpointId>org.eclipse.equinox.p2.osgi</touchpointId>
    <touchpointVersion>1.0.0</touchpointVersion>
    <advice>configure=addJvmArg(jvmArg:-Xmx768m)</advice>
  </p2Advice>
  <targetEnvironments>
    <environment>
      <osgiOS>win32</osgiOS>
      <osgiWS>win32</osgiWS>
      <osgiArch>x86</osgiArch>
    </environment>
    <environment>
      <osgiOS>win32</osgiOS>
      <osgiWS>win32</osgiWS>
      <osgiArch>x86_64</osgiArch>
    </environment>
    <environment>
      <osgiOS>linux</osgiOS>
      <osgiWS>gtk</osgiWS>
      <osgiArch>x86</osgiArch>
    </environment>
    <environment>
      <osgiOS>linux</osgiOS>
      <osgiWS>gtk</osgiWS>
      <osgiArch>x86_64</osgiArch>
    </environment>
    <environment>
      <osgiOS>macosx</osgiOS>
      <osgiWS>cocoa</osgiWS>
      <osgiArch>x86</osgiArch>
    </environment>
    <environment>
      <osgiOS>macosx</osgiOS>
      <osgiWS>cocoa</osgiWS>
      <osgiArch>x86_64</osgiArch>
    </environment>
  </targetEnvironments>
</p2lineup>